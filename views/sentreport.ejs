<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link rel="stylesheet" href="path/to/datepicker.css">
    <title>Hello, world!</title>
  </head>
  <body>
    <%- include('partials/navbar') %>

   

    <div class="container mt-5 p-4 shadow-lg w-75">
        <h2 class="text-center">Last update</h2>


        <form action="/sentReport" method="get">
          <label for="selectedDate">Select Date:</label>
          <input type="date" id="selectedDate" name="date">
          <input type="submit" value="Filter">
        </form>

<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Client</th>
            <th scope="col">Data</th>
            <th scope="col">Sent</th>
            <th scope="col">Operator</th>
            <th scope="col">Pending</th>
            <th scope="col">Last Update</th>
        </tr>
    </thead>
    <tbody>
        <% latestEntries.forEach((user, index) => { %>
            <tr>
                <td><%= index + 1 %></td>
                <td><%= user.clientSelect %></td>
                <td><%= user.data %></td>
                <td><%= user.sent %></td>
                <td><%= user.selectbox %></td>
                <td><%= user.pending %></td>
                <td><%= new Date(user.createdAt).toLocaleString() %></td>
            </tr>
        <% }); %>
    </tbody>
</table>



  <!-- Pagination controls -->
  <% // Calculate the total for A_airtel, M_airtel, and bsnl operators %>
  <% const totalAirtelA = latestEntries.filter(entry => entry.selectbox === 'A_airtel').reduce((total, entry) => total + entry.sent, 0); %>
  <% const totalAirtelM = latestEntries.filter(entry => entry.selectbox === 'M_airtel').reduce((total, entry) => total + entry.sent, 0); %>
  <% const totalBsnl = latestEntries.filter(entry => entry.selectbox === 'bsnl').reduce((total, entry) => total + entry.sent, 0); %>
  
  <h2>Total A_airtel: <%= totalAirtelA %></h2>
  <h2>Total M_airtel: <%= totalAirtelM %></h2>
  <h2>Total Bsnl: <%= totalBsnl %></h2>
  
  <h1>Total Sent: <%= totalSent %></h1>
</div>
    




  
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>

  </body>
</html>