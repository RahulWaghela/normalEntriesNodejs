    <body>
        <%- include('partials/navbar') %>

        <div class="container mt-5 p-4 shadow-lg w-75">
            <h2 class="text-center">Datewise Data</h2>
            <table class="table table-hover">
                <thead>
                    <thead>
                        <tr>
                            <th>Date(dd/mm/yyyy)
                            </th>
                            <th>Airtel A Data
                            </th>
                            <th>Airtel M Data
                            </th>
                            <th>BSNL Data
                            </th>
                           <th>Total Data</th>
                           <th>Total SIM Data</th>
                        </tr>
                    </thead>
                </thead>
                <tbody>
                  <% Object.keys(airtelASum).forEach(date => { %>
                    <tr>
                      <td><%= date %></td>
                      <td><%= airtelASum[date] %></td>
                      <td><%= airtelMSum[date] %></td>
                      <td><%= bsnlSum[date] %></td>
                      <td><%= airtelASum[date] + airtelMSum[date] + bsnlSum[date]  %></td>
                  
                      <td>
                        <% latestTelecomData.forEach(telecom => { %>
                          <% if (telecom.date === date) { %>
                            <%= telecom.total %>
                          <% } %>
                        <% }); %>
                      </td>
                    </tr>
                  <% }); %>
                </tbody>
            </table>

        </div>
        <script>
  // Select all elements with the "dateElement" class
const dateElements = document.querySelectorAll('.dateElement');
  console.log("shree");
  console.log(dateElements);
// Function to format the date from "yyyy-mm-dd" to "dd/mm/yyyy"
function formatDate(inputDate) {
    console.log("radhe")
  const parts = inputDate.split('-');
  if (parts.length === 3) {
    const year = parts[0];
    const month = parts[1];
    const day = parts[2];

    // Ensure month and day have leading zeros if necessary
    const formattedMonth = month.padStart(2, '0');
    const formattedDay = day.padStart(2, '0');

    return `${formattedDay}/${formattedMonth}/${year}`;
  } else {
    // If the input date is not in the expected format, return it as is
    return inputDate;
  }
}

// Iterate through all date elements and update their content
dateElements.forEach(dateElement => {
  const originalDate = dateElement.textContent;
  const formattedDate = formatDate(originalDate);
  dateElement.textContent = formattedDate;
});
</script>
